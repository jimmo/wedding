{namespace soy}

/**
 * @param id
 * @param imageHtml
 * @param titleHtml
 * @param contentHtml
 * @param tabName
 */
{template .card}
<div tabindex="0" class="photo-frame" id="{$id}">
  {$imageHtml|noAutoescape}
  <div class="photo-title">
    <a name="{$id}">{$titleHtml|noAutoescape}</a>
  </div>
  <div class="photo-text">
    {$contentHtml|noAutoescape}
  </div>
  <div class="photo-tab">
    <div class="photo-flag">{$tabName}</div>
  </div>
</div>
{/template}


